<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="lang"
            type="String" />
        <variable
            name="model"
            type="com.haqwat.models.MatchesModel.MatchModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="5dp"
        tools:ignore="UnusedAttribute">

        <FrameLayout
            android:id="@+id/flProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="3dp"

            >
            <FrameLayout
                android:id="@+id/flMid"
                android:layout_width="match_parent"
                android:layout_height="15dp"

                >


                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color16"
                    />

                <TextView
                    android:id="@+id/tvMid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    />

            </FrameLayout>
            <FrameLayout
                android:id="@+id/flWin"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="start"
                >

                <ProgressBar
                    android:id="@+id/progBarWin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/custom_horizontal_progress_bar_win"
                    android:indeterminate="false"
                    />
                <TextView
                    android:id="@+id/tvWin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/flLose"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="end"
                >

                <ProgressBar
                    android:id="@+id/progBarLose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/custom_horizontal_progress_bar_lose"
                    android:indeterminate="false"
                    android:layout_gravity="end"
                    />

                <TextView
                    android:id="@+id/tvLose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"

                    />
            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/llTeam"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/flProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
            <Space
                android:layout_width="10dp"
                android:layout_height="0dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="end"
                android:text="@{model.first_team.title}"

                />
            <View
                android:layout_width="1px"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color5"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color9"
                android:textSize="9sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:text="@{model.date_for_order}"

                />
            <View
                android:layout_width="1px"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color5"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="start"
                android:text="@{model.second_team.title}"


                />
            <Space
                android:layout_width="10dp"
                android:layout_height="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llTeam"
            android:background="@drawable/rounded_round"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
            <FrameLayout
                android:id="@+id/flExpect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_round_green"



                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/white"
                        android:text="@string/expect_now"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_right_arrow"
                        app:tint="@color/white"
                        android:padding="5dp"
                        android:rotation='@{lang.equals("ar")?180:0}'
                        />
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/llResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvFirst"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textColor="@color/color9"
                    android:gravity="center"
                    android:background="@drawable/circle_white"
                    android:textSize="12sp"
                    tools:ignore="SmallSp"
                    android:singleLine="true"
                    android:maxLength="2"
                    android:text='@{model.user_expectation!=null?String.valueOf(model.user_expectation.first_team_goals_count):"0"}'

                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textColor="@color/color9"
                    android:gravity="center"
                    android:background="@drawable/circle_white"
                    android:textSize="12sp"
                    tools:ignore="SmallSp"
                    android:text="x"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvSecond"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textColor="@color/color9"
                    android:gravity="center"
                    android:background="@drawable/circle_white"
                    android:textSize="12sp"
                    tools:ignore="SmallSp"
                    android:singleLine="true"
                    android:maxLength="2"
                    android:text='@{model.user_expectation!=null?String.valueOf(model.user_expectation.second_team_goals_count):"0"}'
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shap_6"
                android:scaleType="centerCrop"

                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                image="@{model.first_team.logo}"
                />

            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_bg_primary_dark"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shap_6"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                image="@{model.second_team.logo}"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_primary"
                />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>